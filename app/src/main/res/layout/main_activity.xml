<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgLight1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imgLight2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgLight1"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtLight1"
        android:layout_width="112dp"
        android:layout_height="37dp"
        android:layout_marginTop="30dp"
        android:text="Lampe 1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/imgLight1"
        app:layout_constraintStart_toStartOf="@+id/imgLight1"
        app:layout_constraintTop_toBottomOf="@+id/imgLight1" />

    <TextView
        android:id="@+id/txtLight2"
        android:layout_width="112dp"
        android:layout_height="37dp"
        android:text="Lampe 2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/imgLight2"
        app:layout_constraintStart_toStartOf="@+id/imgLight2"
        app:layout_constraintTop_toTopOf="@+id/txtLight1" />

</androidx.constraintlayout.widget.ConstraintLayout>